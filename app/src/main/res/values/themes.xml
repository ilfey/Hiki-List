<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/background</item>-->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:textColorPrimary">?android:colorBackground</item>
<!--        <item name="android:fontFamily">@font/inter</item>-->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/indigo_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/indigo_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:colorBackground">#1F2937</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorBackground">@color/blue_grey_700</item>
        <item name="colorOnBackground">@color/blue_grey_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:colorBackground">@color/blue_grey_50</item>
        <item name="colorOnBackground">@color/grey_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>