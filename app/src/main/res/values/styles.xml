<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->

    <style name="Widget.Shikimori.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:drawableTint">?colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.Shikimori.IconButton.Outlined" parent="Widget.Material3.Button.IconButton.Outlined"/>

    <style name="Widget.Shikimori.IconButton.Filled" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:drawableTint">?colorOnPrimary</item>
    </style>

    <style name="Widget.Shikimori.IconButton.Filled.Tonal" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:drawableTint">?colorOnSecondaryContainer</item>
    </style>

    <style name="Widget.Shikimori.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">?colorPrimary</item>
    </style>

    <style name="Widget.Shikimori.OutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="Widget.Shikimori.TextButton" parent="Widget.Material3.Button.TextButton">

    </style>

    <!-- ShapeAppearance -->

    <style name="ShapeAppearance.Shikimori.Cover" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Shikimori.Cover.Small" parent="">
        <item name="cornerSize">@dimen/small_corner</item>
    </style>

    <style name="ShapeAppearance.Shikimori.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chip -->

    <style name="Widget.Shikimori.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipSurfaceColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <!--        <item name="strokeColor">?attr/colorOutline</item>-->
        <!--        <item name="rippleColor">?attr/colorControlHighlight</item>-->
    </style>

    <!-- AlertDialog -->

    <style name="ThemeOverlay.Shikimori.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- <item name="android:layout">@layout/m3_alert_dialog</item>-->
<!--        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Shikimori.HeadlineLarge</item>-->
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:background">?colorSurface</item>
        <item name="dialogCornerRadius">@dimen/alert_dialog_corner_size</item>
    </style>

    <!-- RecyclerView -->

    <style name="Widget.Shikimori.RecyclerView" parent="">
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!-- SearchView -->

    <style name="Widget.Shikimori.SearchView" parent="Widget.Material3.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">?colorOnSurface</item>
        <item name="queryBackground">@null</item>
        <item name="android:textColorHint">?attr/colorControlNormal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- SearchBar -->

    <style name="Widget.Shikimori.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="android:minHeight">48dp</item>
        <item name="maxButtonHeight">48dp</item>
        <item name="android:layout_marginEnd">@dimen/container_padding</item>
        <item name="android:layout_marginStart">@dimen/container_padding</item>
        <item name="defaultMarginsEnabled">false</item>
    </style>

    <!-- Preferences -->

    <style name="PreferenceThemeOverlay.Shikimori">
        <item name="preferenceCategoryTitleTextAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="singleLineTitle">false</item>
    </style>

    <style name="PreferenceThemeOverlay.Shikimori.Category" parent="Preference.Category.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceThemeOverlay.Shikimori.Preference" parent="Preference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceThemeOverlay.Shikimori.Switch" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="iconSpaceReserved">false</item>
    </style>
</resources>