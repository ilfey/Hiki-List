<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->

    <style name="Widget.Shikimori.ImageButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <!--        <item name="android:background">@color/transparent</item>-->
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:drawableTint">?colorPrimary</item>
    </style>

    <style name="Widget.Shikimori.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">?colorPrimary</item>
    </style>

    <style name="Widget.Shikimori.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <!-- ShapeAppearance -->

    <style name="ShapeAppearance.Shikimori.Cover" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Shikimori.Cover.Small" parent="">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="ShapeAppearance.Shikimori.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chip -->

    <style name="Widget.Shikimori.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipSurfaceColor">?colorPrimary</item>
        <item name="android:textColor">?android:textColor</item>
<!--        <item name="strokeColor">?attr/colorOutline</item>-->
<!--        <item name="rippleColor">?attr/colorControlHighlight</item>-->
    </style>

</resources>